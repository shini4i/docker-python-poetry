{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "ignorePaths": [
    "requirements.txt"
  ],
  "regexManagers": [
    {
      "fileMatch": [".*/Dockerfile$"],
      "matchStrings": ["ENV POETRY_VERSION=(?<currentValue>.*)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "python-poetry/poetry"
    }
  ],
  "packageRules": [
    {
      "matchPaths": ["3.10/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.11",
      "additionalBranchPrefix": "3.10-"
    },
    {
      "matchPaths": ["3.11/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.12",
      "additionalBranchPrefix": "3.11-"
    },
    {
      "matchPaths": ["3.12/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.13",
      "additionalBranchPrefix": "3.12-"
    }
  ],
  "automerge": true,
  "stabilityDays": 1,
  "prCreation": "not-pending",
  "platformAutomerge": true
}
