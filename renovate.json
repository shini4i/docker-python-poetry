{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchPaths": ["3.8/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.9"
    },
    {
      "matchPaths": ["3.9/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.10"
    },
    {
      "matchPaths": ["3.10/**"],
      "matchDatasources": ["docker"],
      "allowedVersions": "<3.11"
    }
  ]
}
